
  <div class="container">
    <div class="row">
      <div class="col-md-3" >
        <%= render 'userinfo', user: @user %>
      </div>  
      
      <div class="col-md-8 offset-md-1">
        <table class="table">
          <h2>Users</h2>
    
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
