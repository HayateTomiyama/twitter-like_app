<div class="container">
    <div class="row">
      <div class="col-md-3" >
        <%= render 'users/userinfo', user: @user %>
      </div>  
      
      <div class="col-md-8 offset-md-1">
        <table class="table">
          <h2>Books</h2>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <td>
                <% if book.user == current_user %>
                <%= link_to "Edit", edit_book_path(book.id) %>
                <% end %>
              </td>
              <td>
                <% if book.user == current_user %>
                <%= link_to "Destroy", books_path, method: :delete %>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>



