
<div class="container">
  <div class="row">
    <div class="col-lg-8 ">
  		<h2>User info</h2>
  		<% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this userfrom being saved:</h2>
      
          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
  		<%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.label :Name %> <br />
          <%= f.text_field :name %>
        </div>
        <div class='form-group'>
        	<%= f.label :Image %> <br />
       	  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
        </div>
        <div class='form-group'>
        	<%= f.label :Introduction %> <br />
       	  <%= f.text_area :introduction %>
        </div>
        <div class='actions'>
          <%= f.submit 'Update User', class:"btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

